<h1>All our Flats</h1>

<div class="container">
  <div class="row">
    <% @flats.each_with_index do |flat, index| %>
      <div class="col-12 col-sm-6 col-md-4 col-lg-3 mb-4">
        <div class="flat-card d-flex flex-column">
          <div class="flat-card-image" style="background-image: url('https://loremflickr.com/320/240/appartment?random=<%= index %>')"></div>
          <div class="flat-card-content flex-grow-1">
            <div class="flat-card-title">
              <h4><%= flat.name %></h4>
            </div>
            <p><%= flat.address %></p>
            <div class="d-flex">
              <div class="d-flex align-items-center">
                <i class="fa-solid fa-people-line"></i>
                <span><%= flat.number_of_guests %></span>
              </div>
              <div class="d-flex align-items-center ms-3">
                <i class="fa-solid fa-euro-sign"></i>
                <span><%= flat.price_per_night %></span>
              </div>
            </div>
          </div>
          <div class="flat-card-actions">
            <%= link_to "More info", flat_path(flat) %>
            <%= link_to "Edit", edit_flat_path(flat), class: "ms-3 text-warning" %>
            <%= link_to "Remove", flat_path(flat), data: { turbo_method: :delete, turbo_confirm: "Are you sure?" }, class: "ms-3 text-danger" %>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>
